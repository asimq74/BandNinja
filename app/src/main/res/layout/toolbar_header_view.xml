<?xml version="1.0" encoding="utf-8"?>
<com.asimq.artists.bandninja.ui.HeaderView android:id="@+id/header_view"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:layout_marginBottom="@dimen/activity_vertical_margin"
                                           android:layout_marginTop="@dimen/activity_vertical_margin"
                                           android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/header_view_title"
        style="@style/ExpandedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="Japanese Fairy Tales"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/header_view_author"
        style="@style/ExpandedSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="Hayao Miyazaki"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/header_view_published_date"
        style="@style/ExpandedSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="Oct 9, 1980"/>


</com.asimq.artists.bandninja.ui.HeaderView>