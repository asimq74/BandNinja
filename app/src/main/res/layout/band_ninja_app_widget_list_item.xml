<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widgetItemContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/bandninja_widget_list_item_minHeight"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/widgetItemLabel"
        style="@style/PlaceTextView"
        android:padding="@dimen/bandninja_widget_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        tools:text="Pearl Jam"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>