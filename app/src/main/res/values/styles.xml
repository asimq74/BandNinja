<resources>

    <!-- Base application theme. -->
    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/accent_translucent</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>

    </style>

    <style name="BaseArticleBody" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
        <item name="android:paddingBottom">@dimen/detail_body_bottom_margin</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="ArticleBody" parent="@style/BaseArticleBody"/>

    <style name="BaseExpandedTitle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExpandedTitle" parent="@style/BaseExpandedTitle"/>

    <style name="BaseExpandedSubTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedSubTitle" parent="@style/BaseExpandedSubTitle"/>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
    <color name="accent_translucent">#80FFEB3B</color>

    <style name="TemperatureTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/temperature_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaceTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClockTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
